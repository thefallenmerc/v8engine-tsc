{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "semi": "off",
        "no-extra-semi": "off",
        "quotes": "off",
        "prettier/prettier": [
            "error"
        ]
    }
}